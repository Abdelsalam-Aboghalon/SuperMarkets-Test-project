<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdelsalam.supermarket.AllSuperMarkets"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etMarketName"
            android:hint="Enter supermarket name"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSrchMarket"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:text="search"
            android:onClick="searchMarket"
            android:background="#312a8b"/>



    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Supermarkets"
        android:textColor="#312a8b"
        android:textSize="25dp"
        android:textStyle="italic|bold" />

    <GridView android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/listOfAllSupermarket">

    </GridView>


</LinearLayout>
