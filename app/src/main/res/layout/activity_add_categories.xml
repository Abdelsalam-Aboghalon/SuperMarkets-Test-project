<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.abdelsalam.supermarket.AddCategories">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category Name"
                android:id="@+id/CatName"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Category"
                android:onClick="InsertMyCat"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:background="#312a8b"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="All Categories in Market"
            android:textColor="#312a8b"
            android:textSize="25dp"
            android:textStyle="italic|bold" />

        <GridView android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/listOfAllCategories"
            >|

        </GridView>



    </LinearLayout>




</ScrollView>
